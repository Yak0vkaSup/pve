# Database Configuration
DB_HOST=postgresql
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Environment (dev or production)
FLASK_ENV=dev
VITE_APP_ENV=dev

# Telegram Bot Configuration
# REQUIRED for production, OPTIONAL for development
# Get your bot token from @BotFather on Telegram
# For dev mode, you can leave this empty
TELEGRAM_BOT_TOKEN=

# JWT Secret for token signing
# Generate a secure random string: openssl rand -hex 64
# REQUIRED: Generate a strong secret for both dev and production
JWT_SECRET=your_jwt_secret_here

# Bybit API Configuration (OPTIONAL - only needed for live trading)
# Get from https://www.bybit.com/app/user/api-management
# BYBIT_API_KEY=your_bybit_api_key_here
# BYBIT_API_SECRET=your_bybit_api_secret_here